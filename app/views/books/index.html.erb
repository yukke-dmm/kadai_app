<% if flash[:notice]%>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>  <%= link_to "Show", book_path(book.id) %></td>
        <td>  <%= link_to "Edit", edit_book_path(book.id) %></td>
        <td>  <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are You Sure?'} %></td>
      </tr>
    </tbody>
  <% end %>
 </table>
<!-- ここから投稿ページ -->

  <h2>New book</h2>

  <%= form_for(@book, url: "/books") do |f| %>

  <% if @book.errors.any? %>
    <div id=error_explanation>
      <h2><%= @book.errors.count %> errors proghibited this book from being saved:
      </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>

  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
	<div class="field">
    <%= f.submit 'Create Book' %>
  </div>


  <% end %>
