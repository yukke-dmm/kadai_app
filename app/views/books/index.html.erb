<h1>Books</h1><!-- 投稿一覧 -->
<body>
  <main>
  <div>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>  <%= link_to "Show", book_path(book.id) %></td>
        <td>  <%= link_to "Edit", edit_book_path(book.id) %></td>
        <td>  <%= link_to "Destroy", book_path(book), method: :delete %></td>
      </tr>
    </tbody>
  <% end %>  
 </table>
<!-- ここから投稿ページ -->

  <h1>New book</h1>

  <%= form_for(@book, url: "/books") do |f| %>

	  <h4>Title</h4>
	  <%= f.text_field :title %>
	  <h4>Body</h4>
	  <%= f.text_area :body %>

	  <p><%= f.submit 'Create Book' %></p>

  <% end %>
